// ПТБД-21 Лобан Група №2
#include <iostream>
#include <string>
#include <stdio.h>
#include<cstdlib>

using namespace std;
int main()
{int a, b, x, y;
scanf ( " %d  %d  %d",&a,&b,&x); 
y=((a<=x)&&(x<=b));
printf("\ answer=%d \n", y); 
system ("pause"); 
return 0; 

}
